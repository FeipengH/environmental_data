require(palmerpenguins)
dat_ade = droplevels(subset(penguins, species == "Adelie"))
hist(dat_ade$body_mass_g, main = "Adelie Penguins: Body Mass", xlab = "body mass (g)")

dat_ade_female = subset(dat_ade, sex == "female")
boxplot(dat_ade_female$body_mass_g, xlab = "female", ylab = "body mass (g)", main = "Adelie Penguins: Body Mass")

dat_ade_male = subset(dat_ade, sex == "male")
boxplot(dat_ade_male$body_mass_g, xlab = "male", ylab = "body mass (g)", main = "Adelie Penguins: Body Mass")

t.test(dat_ade_female$body_mass_g, y = NULL,
       alternative = c("two.sided"),
       mu = 0, paired = FALSE, var.equal = FALSE,
       conf.level = 0.95)

t.test(dat_ade_male$body_mass_g, y = NULL,
       alternative = c("greater"),
       mu = 4000, paired = FALSE, var.equal = FALSE,
       conf.level = 0.95)
